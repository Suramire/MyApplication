<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suramire.myapplication.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#388eee">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="32dp"
                android:layout_height="32dp"

                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="财务"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/notification" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:background="#388eee"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_special_disease_circle"
            android:text="显示待收与已收的比值"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="显示待收租金"
                android:textAlignment="center"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="显示本月已收租金"
                android:textAlignment="center"
                android:textColor="#FFF" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_rent"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/home_rent" />

            <ImageView
                android:id="@+id/img_58"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/home_58" />

            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                app:srcCompat="@drawable/home_notification" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_management"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/home_management" />

            <ImageView
                android:id="@+id/img_hardware"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/home_hardware" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/home_help" />

                <ImageView
                    android:id="@+id/img_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/home_shop" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
